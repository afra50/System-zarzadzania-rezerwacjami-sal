<Window x:Class="RezerwacjeSal.Views.ManageReservationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rezerwacje" Height="400" Width="600">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Rezerwacje" FontSize="24" Margin="0,0,0,20"/>

            <!-- Przyciski dla opcji -->
            <Button Content="Przeglądaj rezerwacje" Width="200" Height="40" Margin="0,10" Click="BrowseReservations_Click"/>
            <Button Content="Statystyki" Width="200" Height="40" Margin="0,10" Click="OpenStatisticsWindow_Click"/>
        </StackPanel>
    </Grid>
</Window>
