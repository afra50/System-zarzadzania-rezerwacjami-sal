<Window x:Class="RezerwacjeSal.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel Administratora" Height="400" Width="600">
    <!-- Okno panelu administratora, gdzie administrator zarządza salami, rezerwacjami i może się wylogować -->
    <Grid>
        <!-- StackPanel ustawia elementy w pionie, wyśrodkowane -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Tytuł panelu administratora -->
            <TextBlock Text="Panel Administratora" FontSize="24" Margin="0,0,0,20"/>
            <!-- Przycisk do zarządzania salami -->
            <Button Content="Zarządzaj salami" Width="200" Height="40" Click="ManageRooms_Click" Margin="0,10"/>
            <!-- Przycisk do zarządzania rezerwacjami -->
            <Button Content="Rezerwacje" Width="200" Height="40" Margin="0,10" Click="ManageReservations_Click"/>
            <!-- Przycisk do wylogowania -->
            <Button Content="Wyloguj" Width="200" Height="40" Click="Logout_Click" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>

