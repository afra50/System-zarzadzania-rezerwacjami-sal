        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel Administratora" Height="400" Width="600">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Panel Administratora" FontSize="24" Margin="0,0,0,20"/>
            <Button Content="Zarządzaj salami" Width="200" Height="40" Click="ManageRooms_Click" Margin="0,10"/>
            <Button Content="Rezerwacje" Width="200" Height="40" Margin="0,10"/>
            <Button Content="Wyloguj" Width="200" Height="40" Click="Logout_Click" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>
