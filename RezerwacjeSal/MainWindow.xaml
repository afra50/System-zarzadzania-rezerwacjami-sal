<Window x:Class="RezerwacjeSal.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rezerwacja Sal" Height="250" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Witaj w systemie rezerwacji sal konferencyjych" FontSize="15" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Button Content="Zaloguj się" Width="200" Height="40" 
                    Click="Login_Click" Margin="0,10"/>

            <Button Content="Zarejestruj się" Width="200" Height="40" 
                    Click="Register_Click" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>
